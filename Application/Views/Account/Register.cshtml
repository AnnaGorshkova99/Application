@using Application.Models.Auth
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>

<a asp-action="Login" asp-controller="Account">Войти</a>

<div>

    <form method="post" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label for="exampleInputEmail1" asp-for="Email">Введите Email</label><br />
                <input class="form-control" type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>

            <div class="form-group">
                <label for="exampleInputName1" asp-for="Email">Введите имя</label><br />
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>

            <div class="form-group">
                <label for="exampleInputPhone1" asp-for="Email">Введите номер телефона</label><br />
                <input class="form-control" type="text" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input class="form-control" type="password" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input class="form-control" type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>

            <button type="submit" class="btn btn-primary">Регистрация</button>
        </div>
    </form>
</div>
