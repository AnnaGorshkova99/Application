@using Application.Models.Auth
@model LoginModel

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<div>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="needs-validation" novalidate>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" type="text" asp-for="Email" required />
                <span asp-validation-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input class="form-control" type="password" asp-for="Password" required />
                <span asp-validation-for="Password" />
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">Запомнить меня?</label><br />
                </div>
            </div>
            

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Войти</button>
            </div>

        </div>
    </form>
</div>

