@using Microsoft.AspNetCore.Identity;
@using Application.Models.ViewModels;
@model EditUserRoleModel
@{
    ViewData["Title"] = "Изменение роли";
}
<div>
    <a href="~/Admin/Index">Назад</a>
    <h3>Изменение роли</h3>

    <form asp-action="Edit" method="post" asp-anti-forgery="true">

        <input type="hidden" name="UserId" value="@Model.UserId" />

        @foreach (IdentityRole role in ViewBag.Roles)
        {
            <div class="form-check">
                <input asp-for="Role" class="form-check-input" type="radio" name="Role" value="@role.Name" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    @role.Name
                </label>
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Обновить</button>
        </div>

    </form>
</div>
