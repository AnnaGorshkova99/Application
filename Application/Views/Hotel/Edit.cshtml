@model Hotel 
@{
    ViewData["Title"] = $"Изменение отеля";
}
<div>

    <h3>Форма для изменения данных @Model.Name</h3>

    <form method="post">
        <div class="form-group">
            <label for="exampleInputName1">Наименование отеля</label>
            <input class="form-control" name="Name" type="text" placeholder="Введите наименование отеля">
            
        </div>
        <button type="submit" class="btn btn-primary">Обновить</button>
    </form>

    <div class="form-group">
        <label for="exampleInputName1">Номера</label>
        <ul style="list-style-type:disc;">
            @foreach (var room in Model.HotelRooms)
            {
                <li>
                    <p>@room.Number - @room.Category.Name - @room.NumberOfSeats мест(а)</p>
                </li>

            }
        </ul>
        <a href="~/Room/Add/@Model.Id">Добавить номер</a>
    </div>
    
    
    <div class="form-group">
        <label for="exampleInputName1">Сотрудники</label>
        <ul style="list-style-type:disc;">
            @foreach (var empl in Model.Employees)
            {
                <li>
                    <p>@empl.Name - @empl.Specialization.Name</p>
                </li>

            }
        </ul>
        <a href="~/Employee/Add/@Model.Id">Добавить сотрудника</a>
    </div>
</div>
