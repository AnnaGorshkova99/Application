@{
    ViewData["Title"] = $"Создание отеля";
}
<div>
    <h3>Форма для добавления нового отеля</h3>

    <form method="post">
        <div class="form-group">
            <label for="exampleInputName1">Наименование отеля</label>
            <input class="form-control" name="Name" type="text" placeholder="Введите наименование отеля">
        </div>
        <div class="form-group">
            <label for="exampleInputName1">Описание отеля</label>
            <textarea class="form-control" name="Description" aria-label="Описание отеля"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputName1">Изображение отеля</label>
            <input type="file" class="form-control" name="Image" id="inputGroupFile01">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>

</div>
